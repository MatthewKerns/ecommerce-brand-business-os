# Environment Configuration
# Set the environment: development, staging, or production (defaults to development)
# This determines which .env file to load (.env.development, .env.staging, .env.production)
ENVIRONMENT=development

# Secrets Encryption
# Generate a key with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# ENCRYPTION_KEY=your-base64-encoded-encryption-key-here

# Gmail OAuth Configuration
# Get credentials from: https://console.cloud.google.com/apis/credentials
GMAIL_CLIENT_ID=your-client-id
GMAIL_CLIENT_SECRET=your-secret
GMAIL_REFRESH_TOKEN=your-refresh-token
GMAIL_REDIRECT_URI=http://localhost:3000/auth/gmail/callback
GMAIL_SENDER_EMAIL=noreply@yourdomain.com
GMAIL_SENDER_NAME=Your Company

# AI Provider Configuration
# Choose one or more providers for content generation

# Anthropic (Claude)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-api-key-here
# Optional: Model selection (defaults to claude-sonnet-4-5-20250929)
# ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# Google Gemini
# Get your API key from: https://aistudio.google.com/app/apikey
# GEMINI_API_KEY=your-gemini-key
# GEMINI_MODEL=gemini-1.5-flash

# OpenAI
# Get your API key from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=your-openai-key
# OPENAI_MODEL=gpt-4-turbo-preview

# Google Sheets Configuration
# For lead storage and management
GOOGLE_SHEETS_ID=your-spreadsheet-id
GOOGLE_SERVICE_ACCOUNT_EMAIL=service@account.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Analytics & Tracking
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
WEBHOOK_SECRET=your-hmac-secret-here

# Optional: Default AI output settings
# MAX_TOKENS=4096
# TEMPERATURE=1.0

# Optional: Database (if not using Google Sheets)
# DATABASE_URL=postgresql://user:pass@localhost:5432/email_marketing

# Optional: Rate Limiting
# GMAIL_DAILY_QUOTA=250
# RATE_LIMIT_REQUESTS_PER_SECOND=10
