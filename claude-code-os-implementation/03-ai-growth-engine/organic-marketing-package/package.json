{
  "name": "@organic-marketing/root",
  "version": "0.1.0",
  "private": true,
  "description": "Organic Marketing Package - Monorepo root",
  "workspaces": [
    "packages/shared",
    "packages/content-engine",
    "packages/mcf-connector",
    "packages/dashboard",
    "packages/blog"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:shared": "npm run build -w @organic-marketing/shared",
    "build:content-engine": "npm run build -w @organic-marketing/content-engine",
    "build:mcf-connector": "npm run build -w @organic-marketing/mcf-connector",
    "build:dashboard": "npm run build -w @organic-marketing/dashboard",
    "build:blog": "npm run build -w @organic-marketing/blog",
    "dev:dashboard": "npm run dev -w @organic-marketing/dashboard",
    "dev:blog": "npm run dev -w @organic-marketing/blog",
    "dev:mcf-connector": "npm run dev -w @organic-marketing/mcf-connector",
    "lint": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:ci": "npm run test:ci --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "typecheck": "tsc --build"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "Matthew Kerns",
  "license": "MIT"
}
